            <tr>
              <td colspan="4", class="text-center"><strong>Aucune Heure ajout√©</strong></td>
            </tr>
    <% else %>  
       
      <% @affaire.worktimes.each do |work| %>
         
            <tr>
            
                <td><%= work.daytime %> </td>
                <td> <%= Time.at(work.workday).utc.strftime("%HH %Mmin") %></td>
                <td> <%= work.accord %></td>
                <td> <%= work.weektime_id %></td>
               
                <td> <%= link_to "Show", weektime_path(work.weektime_id) , class:"btn btn-outline-info btn-sm" %></td>
              
            
              
