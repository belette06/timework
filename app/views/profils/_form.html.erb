<div class="container">
<%= simple_form_for(@profil) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



  <div class="row text-center " >
  
    <div class=" border col-sm-4 p-4">
        <H3> IDENTITE </h3>
            <%= f.input :firstname, placeholder: "prénom", label: false, class:"p-1" %>
            <%= f.input :lastname, placeholder: "nom", label: false,class:"p-1" %>
            <%= f.input :phone, placeholder: "telephone", label: false,class:"p-1" %>
            <%= f.input :phone_supl, placeholder: "telephone perso", label: false,class:"p-1" %>
            <%= f.input :job, placeholder: "technicien...", label: false,class:"p-1" %>
    </div>


    <div class="col-sm-3">
         
         <div class="field">
           <% if @profil.avatar.attached? %>  
             <%= image_tag(@profil.avatar_thumbnail) if @profil.avatar.attached? %>
           <% else %>
             <%= image_tag("/photo_avatar.jpg") %>
           <% end %>
         
           <%= f.file_field :avatar %>
         
         </div>
             </div >
         
    <div class=" border col-sm-5 p-4">
     <H3> ADRESSE </h3>
         <%= simple_fields_for @adresse do |adr| %>
            <div class="row">
                <div class="col-sm-3 p-1">
                    <%= adr.input :number, placeholder: "N°", label: false %>
                </div> 
                <div class="col-sm-9 p-1">
                    <%= adr.input :street, placeholder: "rue", label: false  %>
                </div>
            </div>
            <div class="col-sm-12 row p-1">
                <%= adr.input :street2, placeholder: "complement", label: false  %>
            </div>
            <div class="row" >
                <div class="col-sm-6">
                    <%= adr.input :city, placeholder:"Ville", label: false %>
                </div>
                <div class="col-sm-3">
                    <%= adr.input :zip, placeholder:"Code postal" , label: false%>
                </div>
                <div class="col-sm-3">
                    <%= adr.input :contry, placeholder:"Pays", label: false %>
                </div>
            </div>  
            <div class="col-sm-11 container p-1"
                <%= adr.input :body, as: :text, placeholder: "texte", label: false  %>
            </div>
         <%end%>  
    </div>
  </div>  

</br></br>
  <div class="p-4 justify-content-center">
    <%= f.button :submit ,class:"btn btn-outline-secondary" %>
  </div>
<% end %>
