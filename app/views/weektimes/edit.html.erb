<h1 class="text-center">modifier la feuilles d'heure</h1>
  <% if current_user.admin? %>
    <%= render "form", weektime: @weektime %>
  <%else%>
    <%= simple_form_for(@weektime) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    
      <div class="form-inputs text-center">
      
        <%= f.input :dateweek, as: :date, html5: true, label: "Select la semaine "  %>
    
      </div>
    </br>
      <div class="text-center">
        <%= f.button :submit, class:"btn btn-outline-secondary" %>
      </div>
    <% end %>
  <% end %>
<div>
  <%= button_to "dashbord", root_path, method: :get , class:"btn btn-outline-secondary" %>
</div>




<br>

<div>
  <%= link_to "Show this weektime", @weektime %> |
  <%= link_to "Back to weektimes", weektimes_path %>
</div>
